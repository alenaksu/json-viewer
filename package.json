{
    "name": "@alenaksu/json-viewer",
    "version": "0.1.0",
    "main": "build/index.js",
    "source": "src/index.js",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alenaksu/json-viewer.git"
    },
    "keywords": [
        "json",
        "viewer",
        "webcomponents"
    ],
    "author": "alenaksu",
    "bugs": {
        "url": "https://github.com/alenaksu/json-viewer/issues"
    },
    "scripts": {
        "start": "parcel ./website/index.html",
        "build": "rm -rf dist && rollup -c rollup.config.js",
        "website": "rm -rf docs/ && parcel build website/index.html --public-url /json-viewer/ -d docs/"
    },
    "dependencies": {
        "@tiny-lit/element": "^2.0.0-alpha.8",
        "@webcomponents/custom-elements": "^1.4.2"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-modules": "^0.1.4",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "comlink": "^4.3.0",
        "husky": "^4.3.0",
        "parcel": "^2.0.0-alpha.3.2",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.1",
        "pretty-quick": "^3.0.2",
        "rollup": "^2.26.11",
        "rollup-plugin-minify-html-literals": "^1.2.5",
        "rollup-plugin-postcss": "^3.1.8",
        "rollup-plugin-terser": "^7.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-standard-pkg"
            ],
            [
                "@pika/plugin-build-web"
            ]
        ]
    },
    "browserslist": [
        "chrome > 50"
    ]
}
